<!-- res/layout/custom_marker_layout.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/markerImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_marker"
        android:contentDescription="@string/marker_description"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/markerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/markerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="@string/marker_label"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:contentDescription="@string/marker_label_description" />

</RelativeLayout>

